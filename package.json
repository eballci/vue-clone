{
  "name": "vue-clone",
  "version": "1.0.0",
  "description": "Simple clone of vue",
  "main": "src/index.js",
  "scripts": {
    "build": "npm run prepare && npm run lint:production && webpack --mode=production",
    "test": "npm run lint:development && npm run test:unit",
    "test:unit": "jest test",
    "lint:production": "SET NODE_ENV=production eslint src",
    "lint:development": "eslint src test",
    "prepare": "prettier --write ./src ./test"
  },
  "author": "Emre Balci <emre-balci@outlook.com.tr>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/eballci/vue-clone.git"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/eslint-parser": "^7.14.7",
    "@babel/preset-env": "^7.14.7",
    "babel-jest": "^27.0.6",
    "babel-loader": "^8.2.2",
    "eslint": "^7.29.0",
    "eslint-plugin-jest": "^24.3.6",
    "jest": "^27.0.6",
    "prettier": "2.3.2",
    "terser-webpack-plugin": "^5.1.4",
    "webpack": "^5.41.0",
    "webpack-cli": "^4.7.2"
  }
}
